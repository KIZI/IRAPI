<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns="http://www.w3.org/1999/xhtml"
                template="./template.xhtml"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:c="http://java.sun.com/jsp/jstl/core">

    <ui:define name="content">
        <p:panel>  
            <p:fieldset legend="About">  
                <p>
                    <h:outputText  
                        value="irDashboard offers detailed and live statistics (as the index is) for " /> <a href="http://ir.lmcloud.vse.cz/solr/">http://ir.lmcloud.vse.cz/solr/</a>. <h:outputText  
                        value="If it is down (due to capacity problems or temporary server unavailability), there is not shown anything." />
                </p>
                <ul>
                    <li>
                        <b>Index status: </b> 
                        <c:choose>
                            <c:when test="${infoBean.status}"><h:outputText styleClass="color-green" value="RUNNING" /></c:when> <!-- if condition -->
                            <c:when test="${not infoBean.status}"><h:outputText styleClass="color-red" value="INDEX DOWN" /></c:when> <!-- else if condition -->
                            <c:otherwise><h:outputText styleClass="color-red" value="The index state is not available." /></c:otherwise>    <!-- else condition -->
                        </c:choose>                         
                    </li>
                    <li><b>Number of webpages: </b>
                        <c:choose>
                            <c:when test="${not empty infoBean.indexSizeWebpages}"><h:outputText value="#{infoBean.indexSizeWebpages}" /></c:when> <!-- if condition -->
                            <c:when test="${empty infoBean.indexSizeWebpages}"><h:outputText styleClass="color-red" value="INDEX DOWN" /></c:when> <!-- else if condition -->
                            <c:otherwise><h:outputText styleClass="color-red" value="The index state is not available." /></c:otherwise>    <!-- else condition -->
                        </c:choose>  
                    </li>
                    <li><b>Number of images: </b>
                        <c:choose>
                            <c:when test="${not empty infoBean.indexSizeImages}"><h:outputText value="#{infoBean.indexSizeImages}" /></c:when> <!-- if condition -->
                            <c:when test="${empty infoBean.indexSizeImages}"><h:outputText styleClass="color-red" value="INDEX DOWN" /></c:when> <!-- else if condition -->
                            <c:otherwise><h:outputText styleClass="color-red" value="The index state is not available." /></c:otherwise>    <!-- else condition -->
                        </c:choose>  
                    </li> 
                    <li><b>Number of videos: </b>
                        <c:choose>
                            <c:when test="${not empty infoBean.indexSizeVideos}"><h:outputText value="#{infoBean.indexSizeVideos}" /></c:when> <!-- if condition -->
                            <c:when test="${empty infoBean.indexSizeVideos}"><h:outputText styleClass="color-red" value="INDEX DOWN" /></c:when> <!-- else if condition -->
                            <c:otherwise><h:outputText styleClass="color-red" value="The index state is not available." /></c:otherwise>    <!-- else condition -->
                        </c:choose>  
                    </li>   
                    <li><b>Number of audios: </b>
                        <c:choose>
                            <c:when test="${not empty infoBean.indexSizeAudios}"><h:outputText value="#{infoBean.indexSizeAudios}" /></c:when> <!-- if condition -->
                            <c:when test="${empty infoBean.indexSizeAudios}"><h:outputText styleClass="color-red" value="INDEX DOWN" /></c:when> <!-- else if condition -->
                            <c:otherwise><h:outputText styleClass="color-red" value="The index state is not available." /></c:otherwise>    <!-- else condition -->
                        </c:choose>  
                    </li>  
                    <ui:remove>
                    <li><b>Index size: </b>
                        <c:choose>
                            <c:when test="${not empty infoBean.indexSizeGb}"><h:outputText value="#{infoBean.indexSizeGb}" /></c:when> <!-- if condition -->
                            <c:when test="${empty infoBean.indexSizeGb}"><h:outputText styleClass="color-red" value="INDEX DOWN" /></c:when> <!-- else if condition -->
                            <c:otherwise><h:outputText styleClass="color-red" value="The index state is not available." /></c:otherwise>    <!-- else condition -->
                        </c:choose>  
                    </li>      
                    </ui:remove>
                    <li><b>Last modified: </b>
                        <c:choose>
                            <c:when test="${not empty infoBean.lastModified}"><h:outputText value="#{infoBean.lastModified}" /></c:when> <!-- if condition -->
                            <c:when test="${empty infoBean.lastModified}"><h:outputText styleClass="color-red" value="INDEX DOWN" /></c:when> <!-- else if condition -->
                            <c:otherwise><h:outputText styleClass="color-red" value="The index state is not available." /></c:otherwise>    <!-- else condition -->
                        </c:choose>                      
                    </li>
                </ul>             
            </p:fieldset>   
            <br /> 
            <p:fieldset legend="Whitelist administration">  
                <p>
                    <h:outputText  
                        value="It is useful to manage whitelisted URLs for everyone throught some simple GUI interface. Below you can pick which whitelist you want to manage and after that you can start manage." />
                </p>   
                <h:form>  

                    <h:panelGrid columns="2" style="margin-bottom:10px" cellpadding="5">                  
                        <h:outputText value="Whitelist: " /> 
                        <p:selectOneMenu value="#{whitelist.number}" id="selectMenu">  
                            <f:selectItem itemLabel="Select One" itemValue="" />  
                            <f:selectItem itemLabel="RBB whitelist" itemValue="1" />  
                            <f:selectItem itemLabel="S&amp;V whitelist" itemValue="2" />  
                        </p:selectOneMenu>      
                    </h:panelGrid>     

                    <p:commandButton value="Edit selected whitelist" action="#{whitelist.loadWhitelist}" />  
                </h:form>                  
            </p:fieldset>   
            <br />
            <p:fieldset legend="Document statistics">  
                <c:choose>
                    <c:when test="${infoBean.status}">
                        <p:tabView id="tabView">  

                            <p:tab id="tab1" title="General statistics">  
                                <h:panelGrid columns="2" cellpadding="10">  
                                    <p:pieChart id="generalPie" value="#{pieChart.pieModel}" legendPosition="e" fill="false" showDataLabels="true"  
                                                title="Media type ratio" style="width:400px;height:300px" sliceMargin="5" diameter="150" />  

                                    <h:form>  
                                        <p:dataTable var="s" value="#{pieChart.generalStatsList}">  
                                            <p:column headerText="Webpage">  
                                                <h:outputText value="#{s.webpage}" />  
                                            </p:column>

                                            <p:column headerText="Image">  
                                                <h:outputText value="#{s.image}" />  
                                            </p:column>  

                                            <p:column headerText="Video">  
                                                <h:outputText value="#{s.video}" />  
                                            </p:column>  

                                            <p:column headerText="Podcast">  
                                                <h:outputText value="#{s.podcast}" />  
                                            </p:column>  

                                            <p:column headerText="TOTAL docs">  
                                                <h:outputText value="#{s.total}" style="font-weight: bold;" />  
                                            </p:column>      

                                        </p:dataTable>  
                                    </h:form>                        
                                </h:panelGrid>  
                            </p:tab>  

                            <p:tab id="tab2" title="RBB whitelist statistics">  
                                <h:panelGrid columns="2" cellpadding="10">  
                                    <p:pieChart id="rbbPie" value="#{pieChart.rbbPieModel}" legendPosition="e" fill="false" showDataLabels="true"  
                                                title="Media type ratio for urls from RBB whitelist" style="width:400px;height:300px" sliceMargin="5" diameter="150" />  

                                    <h:form>  
                                        <p:dataTable var="s" value="#{pieChart.rbbStatsList}">  
                                            <p:column headerText="Webpage">  
                                                <h:outputText value="#{s.webpage}" />  
                                            </p:column>

                                            <p:column headerText="Image">  
                                                <h:outputText value="#{s.image}" />  
                                            </p:column>  

                                            <p:column headerText="Video">  
                                                <h:outputText value="#{s.video}" />  
                                            </p:column>  

                                            <p:column headerText="Podcast">  
                                                <h:outputText value="#{s.podcast}" />  
                                            </p:column>  

                                            <p:column headerText="TOTAL docs">  
                                                <h:outputText value="#{s.total}" style="font-weight: bold;"/>  
                                            </p:column>      

                                        </p:dataTable>  
                                    </h:form>                               
                                </h:panelGrid>  
                            </p:tab>  

                            <p:tab id="tab3" title="S&amp;V whitelist statistics">  
                                <h:panelGrid columns="2" cellpadding="10">  
                                    <p:pieChart id="savPie" value="#{pieChart.savPieModel}" legendPosition="e" fill="false" showDataLabels="true"  
                                                title="Media type ratio for urls from S&amp;V whitelist" style="width:400px;height:300px" sliceMargin="5" diameter="150" />  

                                    <h:form>  
                                        <p:dataTable var="s" value="#{pieChart.savStatsList}">  
                                            <p:column headerText="Webpage">  
                                                <h:outputText value="#{s.webpage}" />  
                                            </p:column>

                                            <p:column headerText="Image">  
                                                <h:outputText value="#{s.image}" />  
                                            </p:column>  

                                            <p:column headerText="Video">  
                                                <h:outputText value="#{s.video}" />  
                                            </p:column>  

                                            <p:column headerText="Podcast">  
                                                <h:outputText value="#{s.podcast}" />  
                                            </p:column>  

                                            <p:column headerText="TOTAL docs">  
                                                <h:outputText value="#{s.total}" style="font-weight: bold;"/>  
                                            </p:column>      

                                        </p:dataTable>  
                                    </h:form>                               
                                </h:panelGrid>  
                            </p:tab>  

                        </p:tabView>     
                    </c:when> <!-- if condition -->
                    <c:when test="${not infoBean.status}"><h:outputText styleClass="color-red" value="INDEX DOWN" /></c:when> <!-- else if condition -->
                    <c:otherwise><h:outputText styleClass="color-red" value="The index state is not available." /></c:otherwise>    <!-- else condition -->
                </c:choose>  
            </p:fieldset> 
            <br />
            <p:fieldset legend="Statistics for hosts from both whitelists">  
                <f:view>
                    <h:form>
                        <p:growl id="msg" showDetail="true" escape="false" />
                        <h3 style="margin-top:15">Domains and its statistics</h3>
                        <b>Info: </b><p style="color:red"><h:graphicImage library="images" name="zero.png"/><i> If there is a site with row full of red zeroes, our crawler has no access to the site, typically due to exclusion of the Nutch robot in the robots.txt file or there is another restriction.</i></p>
                        <p:dataTable id="displayDomains" var="item" value="#{pick.domainsToTable}" widgetVar="carsTable" filteredValue="#{pick.filteredDomains}">                                                               

                            <p:column headerText="Domain" sortBy="#{item.url}">  
                                <h:outputText value="#{item.url}"/>
                            </p:column>                                      

                            <p:column headerText="Webpage" sortBy="#{item.webpage}">  
                                <h:outputText value="#{item.webpage}" style="color:red" rendered="#{item.webpage==0 and item.image==0 and item.video==0 and item.podcast==0 and item.total==0}"/> 
                                <h:outputText value="#{item.webpage}" rendered="#{item.webpage!=0 or item.image!=0 or item.video!=0 or item.podcast!=0 or item.total!=0}"/>      
                            </p:column>  

                            <p:column headerText="Image" sortBy="#{item.image}">  
                                <h:outputText value="#{item.image}" style="color:red" rendered="#{item.webpage==0 and item.image==0 and item.video==0 and item.podcast==0 and item.total==0}"/> 
                                <h:outputText value="#{item.image}" rendered="#{item.webpage!=0 or item.image!=0 or item.video!=0 or item.podcast!=0 or item.total!=0}"/>      
                            </p:column> 

                            <p:column headerText="Video" sortBy="#{item.video}">  
                                <h:outputText value="#{item.video}" style="color:red" rendered="#{item.webpage==0 and item.image==0 and item.video==0 and item.podcast==0 and item.total==0}"/> 
                                <h:outputText value="#{item.video}" rendered="#{item.webpage!=0 or item.image!=0 or item.video!=0 or item.podcast!=0 or item.total!=0}"/>       
                            </p:column>

                            <p:column headerText="Podcast" sortBy="#{item.podcast}">  
                                <h:outputText value="#{item.podcast}" style="color:red" rendered="#{item.webpage==0 and item.image==0 and item.video==0 and item.podcast==0 and item.total==0}"/> 
                                <h:outputText value="#{item.podcast}" rendered="#{item.webpage!=0 or item.image!=0 or item.video!=0 or item.podcast!=0 or item.total!=0}"/>      
                            </p:column>

                            <p:column headerText="TOTAL" sortBy="#{item.total}">                                              
                                <h:outputText value="#{item.total}" style="color:red" rendered="#{item.webpage==0 and item.image==0 and item.video==0 and item.podcast==0 and item.total==0}"/> 
                                <h:outputText value="#{item.total}" rendered="#{item.webpage!=0 or item.image!=0 or item.video!=0 or item.podcast!=0 or item.total!=0}"/>      
                                <ui:remove>
                                    <h:graphicImage library="images" name="zero.png" value="0" rendered="#{item.total == 0}" alt="0"/>                                                                                 
                                </ui:remove>
                            </p:column>    

                            <p:column headerText="Whitelist filter" sortBy="#{item.whitelist}" filterBy="#{item.whitelist}" filterMatchMode="contains">  
                                <h:outputText value="#{item.whitelist}" />                                           
                            </p:column>                                   
                        </p:dataTable>  

                        <h3 style="margin-top:15">Export data from the table</h3>

                        <h:panelGrid columns="2">  
                            <p:panel header="Export All Data">  
                                <h:commandLink>  
                                    <p:graphicImage value="./resources/images/csv.png" />  
                                    <p:dataExporter type="csv" target="displayDomains" fileName="ir_domains_stats" />  
                                </h:commandLink>  

                                <h:commandLink>  
                                    <p:graphicImage value="./resources/images/xml.png" />  
                                    <p:dataExporter type="xml" target="displayDomains" fileName="ir_domains_stats" />  
                                </h:commandLink>  
                            </p:panel>   
                        </h:panelGrid>                         

                    </h:form>  
                </f:view>                           

            </p:fieldset>    

            <br />
            <ui:remove>
            <p:fieldset legend="Statistics of crawling in time">  
                TODO

            </p:fieldset>               
            </ui:remove>
        </p:panel>
    </ui:define>

</ui:composition>
