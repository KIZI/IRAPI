    public String addUrl() {
        error = null;
        success = null;
        if ((dom == null) || ("".equals(dom))) {
            error = "Please insert url you want to add.";
            return "whitelist?faces-redirect=true";
        }
        try {
            if (validUrl(dom)) {
                if (this.number == 1) {
